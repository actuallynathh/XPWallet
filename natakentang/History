    <script>
        const filterContainer = document.getElementById('filter-container');
        const activityList = document.getElementById('activity-list');
        const transactionItems = activityList.querySelectorAll('.transaction-item');

        filterContainer.addEventListener('click', (event) => {
            const target = event.target.closest('.filter-btn');
            if (!target) return;

            // Update active button style
            filterContainer.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('filter-active');
                btn.classList.add('text-slate-300', 'hover:bg-slate-700');
            });
            target.classList.add('filter-active');
            target.classList.remove('text-slate-300', 'hover:bg-slate-700');

            const filter = target.dataset.filter;

            // Filter transaction items
            transactionItems.forEach(item => {
                if (filter === 'all' || item.dataset.category === filter) {
                    item.style.display = 'flex';
                } else {
                    item.style.display = 'none';
                }
            });
        });
    </script>

